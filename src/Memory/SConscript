#------------------------------
# IMPORTS
#------------------------------

Import('env')
Import('type')

#------------------------------
# DEPENDENCIES
#------------------------------

components = ['performance','error',
	      'monitor',
	      'test','cello']
libraries = ['png']

#------------------------------
# ENVIRONMENTS
#------------------------------

env = env.Clone(LIBS=[components,libraries])

#------------------------------
# SOURCE
#------------------------------

includes = [Glob('*hpp')]
sources  = [Glob('memory*cpp')]

#------------------------------
# TARGETS
#------------------------------

libraries = env.Library ('memory', [sources])

if (type == "charm"):
	sources = sources + ["../main.cpp"]

binaries  = env.Program (['test_Memory.cpp', sources])

#------------------------------
# INSTALL
#------------------------------

env.Alias('install-inc',env.Install ('#/include',  includes))
env.Alias('install-lib',env.Install ('#/lib/'+type,libraries))
env.Alias('install-bin',env.Install ('#/bin/'+type,binaries))
