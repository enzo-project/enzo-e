#========================================================================
#
# VARIABLES
#
#    CXX          C++ compiler
#    OPT          Compiler options
#    LIB_HDF5     HDF5 libraries
#    INC_HDF5     HDF5 includes
#
#========================================================================


#----------------------------------------------------------------------
# Compilers
#----------------------------------------------------------------------

  CXX = mpiCC
  CC  = mpicc
  FC  = mpif77

#----------------------------------------------------------------------
# OPT:  optimization/debug compiler flags
#----------------------------------------------------------------------

  OPT_DEBUG = -g -fsignaling-nans -Wall
  OPT_FAST  = -O3

  OPT = $(OPT_FAST)
  OPT = $(OPT_DEBUG)

#------------------------------------------------------------------------
# HDF Library and includes
#------------------------------------------------------------------------

  LIB_HDF5 = -lhdf5
  INC_HDF5 = 

  LIB_FORTRAN = -lgfortran
