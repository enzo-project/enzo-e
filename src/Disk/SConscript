Import('env')

libraries  = ['hdf5', 'array']
components = ['error']

env = env.Clone(LIBS=[components,libraries])

includes = [Glob('*hpp')]

env.Alias('install-inc',env.Install ('#/include',includes))

libraries = env.Library ('disk', Glob('disk*cpp'))

env.Alias('install-lib',env.Install ('#/lib',libraries))

sources  = Glob('disk*cpp')

test_disk_hdf5 = env.Program (['test_disk_hdf5.cpp', sources])

env.Alias('install-bin', env.Install ('$BINPATH', [test_disk_hdf5]))



