#------------------------------
# DIRECTORIES
#------------------------------
#------------------------------
# IMPORTS
#------------------------------

Import('env')
Import('type')
Import('use_papi')

#------------------------------
# DEPENDENCIES
#------------------------------

components = ['enzo','method','mesh','field','error','disk','memory','parallel','parameters','monitor','cello']

if (use_papi):
	components = components + ['papi','pfm']

components = components + ['hdf5']

libraries  = ['png', '$FORTRANLIBS']

#------------------------------
# ENVIRONMENTS
#------------------------------

env = env.Clone (LIBS = [components,libraries])

#------------------------------
# SOURCE
#------------------------------

sources  = [Glob('initialize*cpp'),
            Glob('Cosmology*.cpp'),
            Glob('Grid_*cpp'),
            Glob('*.F'),
	    'FindField.cpp',
	    'sum_field.cpp',
            'fortran.h']

#------------------------------
# TARGETS
#------------------------------

libraries = env.Library ('enzo-ppm', sources)

#------------------------------
# INSTALL
#------------------------------

env.Alias('install-lib',env.Install ('#/lib/'+type,libraries))
