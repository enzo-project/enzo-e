   env.RunParallel	(type_path + 'test_GroupProcess.unit','#/bin/test_GroupProcess',ARGS='4')
else:
   env.RunParallel	(type_path + 'test_GroupProcess.unit','#/bin/test_GroupProcess',ARGS='1')


