# File:    sphere.incl
### Problem: 2D Implosion problem
### Author:  James Bordner (jobordner@ucsd.edu)
###
### This file tests the #include preprocessing command

   Domain { 
      lower = [0.0, 0.0, 0.0];
      upper = [1.0, 1.0, 1.0];
   } 

   Mesh { 
      root_rank   = 3;
      root_size   = [16,16,16];
      root_blocks = [2,2,2];
   }

   Field {

      ghosts = 3;

      fields = [
        "density",
        "velocity_x",
        "velocity_y",
        "velocity_z",
        "total_energy",
        "internal_energy"
      ] ;

      courant   = 0.8;

   }

   Method {

      sequence = ["ppm"];

   }

   Timestep { type = "ppm"; }

   Enzo {

      gamma = 1.4;

      ppm {
         diffusion   = true;
         flattening  = 3;
         steepening  = true;
         dual_energy = false;
     }
   }

   Initial {
       density       { value = [ 0.125,
                             (x- 0.25)*(x- 0.25)+(y- 0.25)*(y- 0.25)+(z- 0.25)*(z- 0.25) > 0.04,
                                 1.0 ]; };
       total_energy  { value = [ 0.14 / (0.4 * 0.125), 
                             (x- 0.25)*(x- 0.25)+(y- 0.25)*(y- 0.25)+(z- 0.25)*(z- 0.25) > 0.04,
	                         1.0  / (0.4 * 1.0) ]; };
       velocity_x    { value = [0.0]; };
       velocity_y    { value = [0.0]; };
       velocity_z    { value = [0.0]; };
       internal_energy { value = [0.0]; };

   }

   Boundary { type = "reflecting" }

   Stopping {
      time  = 2.5;
      cycle = 100;
   }

   Output { 

      file_groups = ["cycle_step"];

      cycle_step {
         name      = ["DEFERRED"];
         field_list = ["density"];
         type     = "image";
         schedule {var = "cycle"; type = "interval"; step = 1;};
         colormap = [0.00, 0.00, 0.50,  
                     0.00, 1.00, 0.00, 
                     1.00, 1.00, 0.00, 
                     1.00, 0.00, 0.00];
      }
   }
