# Problem: 2D Implosion problem
# Author:  James Bordner (jobordner@ucsd.edu)

include "input/ppm.incl"


Mesh 
{
   root_rank = 2;
   root_size   = [32,32];
   root_blocks = [ 2, 2]; 
   max_level   = 5; 
   adapt {
      type = ["slope"];
      balance = true;
      fields = ["density"];
   }
}

Field {
   ghosts = 4;
   refresh {
     rank = 0;
     type = "quiescence";
   }
}
Initial {
   max_level = 5;
      fields = [
	"density",	
	"velocity_x",
	"velocity_y",
	"total_energy",
	"internal_energy"
      ] ;
}
  Initial {
     density       { value = [  1.0, "input/test_balance.png", 
                                0.1 ]; };
     total_energy  { value = [  0.1 / (0.4 * 0.1), "input/test_balance.png",
                                1.0 / (0.4 * 1.0)  ]; };
  }

# Initial {
#     density      { value = [ 1.0,           (x - 0.5)*(x - 0.5) + (y - 0.5)*(y - 0.5) < 0.25,  
#                              0.1 ]; };
#     total_energy { value = [ 1.0/(0.4*1.0), (x- 0.5)*(x- 0.5) + (y- 0.5)*(y- 0.5) < 0.25,  
#                              0.1/(0.4*0.1) ]; };
# }

Stopping { cycle = 100; }

Output {

#   file_groups = ["image_mesh"]; 
#   file_groups = ["image_data"]; 
   file_groups = ["image_mesh","image_data"]; 
#   file_groups = []; 

      image_data {
	type     = "image";
	image_type  = "data";
        image_ghost = true;
	image_size  = [1024,1024];
        field_list = ["density"];
	schedule = ["cycle","interval", 10];
        colormap = [0.00, 0.00, 0.50,  
                    0.00, 1.00, 0.00, 
                    1.00, 1.00, 0.00, 
                    1.00, 0.00, 0.00];
#          colormap = [0.0, 0.0, 0.0, 1.0, 1.0, 1.0];
        name = ["mesh-balanced-data.%02d.png","cycle"];
      };
      image_mesh {
	type     = "image";
	image_type  = "mesh";
	image_reduce_type = "max";
        field_list = ["density"];
	image_block_size  = 3;
	image_size  = [1025,1025];
	schedule = ["cycle","interval", 10];
        colormap = [1.00, 1.00, 1.00,  
                    0.20, 0.20, 0.20];
        name = ["mesh-balanced-mesh.%02d.png","cycle"];
        
      };

}
Performance { warnings = false; }
