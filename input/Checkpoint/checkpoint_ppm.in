# intended to be used for automated tests of new-style Checkpoint-Restart
#
# an important requirement for these tests is that all executed produce
# bitwise-reproducible, deterministic results
#
# the test can optionally be configured to perform comparisons of h5-data dumps
# generated by through the legacy Output-Machinery. In these cases the fields
# are written out that are specified in the Field:list parameter

include "input/Checkpoint/legacy/checkpoint_ppm.in"

   Adapt {
      max_initial_level = 0;
      min_level = -1;
      max_level = 0;
   }

   Method {
      list = ["order_morton", "check", "ppm"];

      order_morton {
          schedule {
             list = [2, 4];
             var = "cycle";
          };
      };

      check {
          dir = [ "Check-%02d", "cycle" ];
          num_files = 2;
          ordering = "order_morton";
          include_ghosts = false; # the program encounters an error on restart
                                  # when this is true
          schedule {
             list = [2, 4];
             var = "cycle";
          };
      };

   }

